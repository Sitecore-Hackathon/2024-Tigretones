---
import { data } from '../Api/request.js';
import MainLayout from '../Layouts/default.astro';
---

<MainLayout>
  <div slot="header" class="my-2 flex justify-end container">
    <a class="bg-primary px-10 py-2 rounded-3xl font-bold" href="/">Back</a>
  </div>
  <main class="container mx-auto">
    <h1 class="text-center text-4xl mt-16 mb-20 font-title uppercase">{data.sitecore.route.fields.Title.value}</h1>
    <Fragment set:html={data.sitecore.route.fields.Content.value} />
  </main>
</MainLayout>